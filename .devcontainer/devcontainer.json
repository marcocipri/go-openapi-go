{
	"name": "Go and OpenApi Sample",
	"dockerFile": "Dockerfile",
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [9000],
	"workspaceFolder": "/go/",
	// Use 'settings' to set *default* container specific settings.json values on container create. 
	// You can edit these settings after create using File > Preferences > Settings > Remote.
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/zsh",
		"go.gopath": "/go",
		"go.inferGopath": true,
		"go.useLanguageServer": true
	},

	// Add the IDs of extensions you want installed when the container is created in the array below.
	"extensions": [
		"ms-vscode.go"
	],
	//"mounts": [
	//	"source=${localWorkspaceFolder}/src,target=/go/src,type=bind,consistency=cached"
	//],
	// Uncomment the next line to run commands after the container is created.
	// "postCreateCommand": "go version",

	// Comment out the next line to run as root
	"remoteUser": "vscode",
	"postCreateCommand": "go get github.com/marcocipri/go-openapi-go"

}